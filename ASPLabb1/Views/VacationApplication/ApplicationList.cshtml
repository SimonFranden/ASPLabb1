@model IEnumerable<ASPLabb1.Models.ApplicationInfoViewmodel>



<p>
    <a asp-action="Create">+Skapa ledighetsansökan</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Datum från
            </th>
            <th>
                Datum till
            </th>
            <th>
                Ansökningsdatum
            </th>
            <th>
                Namn
            </th>
            <th>
                Ledighetstyp
            </th>
            <th>
                Antal dagar
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            TimeSpan difference = item.EndDate - item.StartDate;
            int numberOfDays = (int)difference.TotalDays;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VacationType)
                </td>
                <td>
                    @numberOfDays
                </td>
            </tr>
        }

        

}
    </tbody>
</table>
